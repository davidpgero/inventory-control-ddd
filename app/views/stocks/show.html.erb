<p id="notice"><%= notice %></p>

<h2><%= @product.name %></h2>
<span><%= @product.uid %></span>

<h3>Stocks</h3>

<p><%= link_to 'Stock in', products_path %></p>

<table>
  <thead>
  <tr>
    <th colspan="3">Location</th>
    <th colspan="3">Quantity</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @stocks.each do |stock| %>
    <tr>
      <td><%= stock.location_uid %></td>
      <td><%= stock.quantity %></td>
      <td>
        <%= link_to 'Stock Out', products_path %> |
        <%= link_to 'Adjust', products_path %> |
        <%= link_to 'Transfer', products_path %> |
      </td>
    </tr>
  <% end %>

  </tbody>
</table>

<p><%= link_to 'Stock in', products_path %></p>

