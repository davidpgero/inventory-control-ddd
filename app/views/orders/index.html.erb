<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<p><%= link_to 'New Order', new_order_path %></p>

<table>
  <thead>
  <tr>
    <th colspan="6">Product Name</th>
    <th colspan="3">Quantity</th>
    <th colspan="3">State</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @orders.each do |order| %>
    <tr>
      <td colspan="6"><%= order.product_name %></td>
      <td colspan="3"><%= order.quantity %></td>
      <td colspan="3"><%= order.state %></td>
      <td colspan="3"><%= link_to 'Show', order_path(order.uid) %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New Order', new_order_path %></p>